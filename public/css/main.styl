@import 'variables'
@import 'fonts'

* 
	padding: 0
	margin: 0
	-webkit-box-sizing: border-box 
	-moz-box-sizing: border-box
	box-sizing: border-box

html, body
	font: font-size/line-height font-main
	font-weight: 100

a 
	text-decoration: none

.content:before, .content:after, .row:after, .row:before, .clear:before, .clear:after, header:before, header:after	
		content: " "
		display: table

.content:after, .row:after, .clear:after,  header:after		
		clear:both

.content .cols.col-1, .content .cols.col-2,	.content .cols.col-3, .content .cols.col-4,	.content .cols.col-6, .content .cols.col-7, .content .cols.col-8, .content .cols.col-9, .content .cols.col-10, .content .cols.col-11, .content .cols.col-12
	width: 100%

.content .cols	
		float: none

header
	width: 100%
	background: white
	padding: 13px 13px
	position: fixed
	top: 0px
	z-index: 99
	display: block
	
h1, h2, h3, h4
	margin-bottom: 15px

fieldset
	border: none

.row
	margin: 0 -15px
	width: auto

input
	width: 100%
	margin-bottom: 10px

button
	outline: none
	
p
	color: #576366
	font-size: 16px
	line-height: 1.6
	margin-top: 8px
	margin-bottom: 20px
	font-family: GothamProLight

img
	width: 100%

input[type=text]
	border-radius: 5px
	height: 44px
	border: none
	padding: 12px 15px
	color: inputs-color
	background: inputs-background
	font-size: 14px
	font-family: GothamProLight
	font-weight: 700
	outline: none
	&:focus
		box-shadow: 0 0 2pt 2pt #e8ebed
		background: #fff
		transition: 0.3s


.brand
	font-size: 19px
	font-family: Gotham
	color: green-color
	letter-spacing: 1px
	&:hover
		color: green-color-hover

/*MAIN*/


.get-start-block
	background: green-color
	padding: 95px 0px
	color: white
	
.get-start-block h1
	margin-top: 130px
	
.get-start-block h1
	font-size: 40px	
	font-family: Gotham
	
.get-start-block h2
	font-family: GothamProLight
	font-size: 20px

header>span>img
	float: right
	width: 25px
	height: 25px
	display: block

.form-card
	margin-top: 50px
	background: #fff
	padding: 30px
	border-radius: 5px
	box-shadow: 0px 2px 0px rgba(0,0,0,0.15)
	
.form-card p
	background dark-green-color
	font-family: Gotham
	color: #fff
	padding: 20px
	margin: -30px
	text-align: center
	border-top-right-radius: 5px
	border-top-left-radius: 5px
	margin-bottom: 35px

.button 
	display: inline-block
	font-family: Gotham
	color: #fff
	margin-bottom: 0
	font-weight: normal
	text-align: center
	vertical-align: middle
	cursor: pointer
	background-image: none
	border: 1px solid transparent
	white-space: nowrap
	padding: 8px 12px
	font-size: 14px
	line-height: 1.42857143
	border-radius: 4px
	-webkit-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none

.button-normal
	padding: 5px 15px
	font-size: 12px
	line-height: 1.5
	border-radius: 5px
	color: #fff

.button-green
	background: #5fcf80
	&:hover
		background: #3ac162

.button-huge
	font-size: 16px
	height: 52px
	line-height: 48px
	padding: 0 32px
	
.main-heading
	margin-top: 50px
.main-heading h1, .main-heading p
	text-align: center
	

.main-heading h1
	font-size: 24px
	color: #384047
	margin-bottom: 0px
	font-family: GothamProMedium

@media screen and (max-width: 767px)
	header nav
		display: none
	
	header.mobile-nav
		display: block
	
	.get-start-block
		padding: 95px 15px 
	
	.menu-button
		background: url('/teamtreehouse/public/img/hamburger.png')
		background-size: cover
		float: right
		width: 25px
		height: 25px
		border: none
		cursor: pointer	
	
	.mobile-nav-menu
		display: none
		width: 270px
		position: absolute
		top: 0px
		right: 0px
		background: #384047
	
	.mobile-nav-menu-head
		height: 52px
		border-bottom: 1px solid #31383e
		padding-top: 15px
		
	.close
		background: url('/teamtreehouse/public/img/close.png')
		background-size: cover 
		position: relative
		top: -35px
		left: -40px
		width: 40px
		height: 40px
		border: none
		cursor: pointer	
	
	.mobile-nav-menu-head a 
		font-size: 14px
		color: #fff
		display: block
		font-family: Gotham	
		padding: 0px 15px
		&:hover
			color:#bbb

	.mobile-nav-menu>a
		display: block
		font-family: Gotham	
		color: #788188
		font-size: 18px
		padding: 15px 15px
		&:hover
			color:#fff
	
	.mobile-nav-menu-head>.button
		float: right
		display: block
		margin-top: -5px
		margin-right: 10px
		
		

@media screen and (min-width: 768px)	

	.mobile-nav
		display: none

	.content
		max-width: 1030px
		padding: 0 15px
		margin: 0 auto 		

	header
		height: 80px
		padding-top: 25px
	
	header nav
		float: right
		margin-top: 6px
	
	header nav a
		font-size: 14px
		font-family: Gotham	
		color: #576366
		margin-left: 30px
		&:hover
			color: #313638
		&:last-child
			color: green-color
			&:hover
				color: dark-green-color	
	
	.brand
		font-size: 22px
	
	.item
		padding: 5px 35px
		
	.item h5
		margin-top: 40px
		text-align: left
		color: #4c5760
	
	.item p
		text-align: left
	
	.item a
		color: #42b4d6
		margin-top: 20px
		font-family: GothamProLight
		font-weight: bold
		&:hover
			color: #2dacd1

	.content .cols
		float: left	
		margin:  0 0 1em
		padding: 0 5px

	.content .cols.col-1
		width: 8.333333333%
		
	.offset-1
