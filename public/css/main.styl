@import 'variables'
@import 'fonts'

* 
	padding: 0
	margin: 0
	-webkit-box-sizing: border-box 
	-moz-box-sizing: border-box
	box-sizing: border-box

html, body
	font: font-size/line-height font-main
	font-weight: 100

a 
	text-decoration: none

.content:before, .content:after, .row:after, .row:before, .clear:before, .clear:after, header:before, header:after	
		content: " "
		display: table

.content:after, .row:after, .clear:after,  header:after		
		clear:both

.content .cols.col-1, .content .cols.col-2,	.content .cols.col-3, .content .cols.col-4,	.content .cols.col-6, .content .cols.col-7, .content .cols.col-8, .content .cols.col-9, .content .cols.col-10, .content .cols.col-11, .content .cols.col-12
	width: 100%

.content .cols	
		float: none
	

header
	width: 100%
	background: white
	padding: 13px 13px
	position: fixed
	top: 0px
	z-index: 99
	display: block

header button
	background: url('/img/hamburger.png')
	background-size: cover
	float: right
	width: 25px
	height: 25px
	border: none
	cursor: pointer
	
	
h1, h2, h3, h4
	margin-bottom: 15px

fieldset
	border: none

.row
	margin: 0 -15px
	width: auto

input
	width: 100%
	margin-bottom: 10px

input[type=text]
	border-radius: 5px
	height: 44px
	border: none
	padding: 12px 15px
	color: inputs-color
	background: inputs-background
	font-size: 14px
	font-family: GothamProLight
	font-weight: 700
	outline: none
	&:focus
		box-shadow: 0 0 2pt 2pt #e8ebed
		background: #fff
		transition: 0.3s


.brand
	font-size: 19px
	font-family: Gotham
	color: green-color
	letter-spacing: 1px
	&:hover
		color: green-color-hover

/*MAIN*/


.get-start-block
	background: green-color
	padding: 95px 15px
	color: white
	
.get-start-block h1
	margin-top: 130px
	
.get-start-block h1
	font-size: 40px	
	font-family: Gotham
	
.get-start-block h2
	font-family: GothamProLight
	font-size: 20px

header>span>img
	float: right
	width: 25px
	height: 25px
	display: block

.form-card
	margin-top: 50px
	background: #fff
	padding: 30px
	border-top-right-radius: 5px
	border-top-left-radius: 5px
	
.form-card p
	background dark-green-color
	padding: 20px
	margin: -30px
	text-align: center
	border-top-right-radius: 5px
	border-top-left-radius: 5px
	margin-bottom: 35px
	

